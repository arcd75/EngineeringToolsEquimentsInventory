//蒙板
$('.headToggleDIV>ul>li').hover(function(){
	if( $(this).find( $('.head_toggle').is(':visible') ) ){
		$('.modal').show();
	}
},function(){
	$('.modal').hide();
})
//下拉animate

$('.headToggleDIV li').hover(function(e){
	e.stopPropagation();
	$(this).children($('a')).addClass('active');
	$(this).find($('.head_toggle')).show();
	var num =0;
	var len = $(this).find($('li')).length;
	setInterval(function(){
		var _num = num ++ ;
		if(_num < len){
			$('.headToggleDIV ul.active li').eq(_num).addClass('right_to_left');
			$('.headToggleDIV ul.active li').eq(_num).css({opacity : 1});
		}
	},45)

},function(){
	$(this).children($('a')).removeClass('active');
	$(this).find($('.head_toggle')).hide();
	$(this).find($('li')).removeClass();
	$(this).find($('li')).css({opacity : 0});
})