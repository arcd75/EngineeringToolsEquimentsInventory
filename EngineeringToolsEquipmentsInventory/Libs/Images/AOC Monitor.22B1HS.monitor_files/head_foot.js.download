//搜索效果
$('.serarch img').click(function(e){
	if($(this).hasClass('active')){e.stopPropagation();$(this).removeClass('active');return}
	$(this).addClass('active');
	$(this). animate({width:'25px',height:'25px',top:"5px"},300);
	$('.serarInput').animate({opacity:'1',width:'175px'},300).focus().val('');
})
$('.serarInput').blur(function(){
	$('.serarch img').animate({width:'32px',height:'32px',top:"3px"},300);
	$(this).animate({opacity:'0',width:'20px'},300);
})
$('.serarInput').bind("input propertychange change",function(event){
	if($(this).val()){
		$('.searchResult').show();
	}else{
		$('.searchResult').hide();
	}
})
$.each($('.headToggleDIV>ul>li'),function(i){
	var _that = $('.headToggleDIV>ul>li').eq(i);
	var pad = _that.css('paddingLeft');
	pad = pad.split('px')[0] * 2;
	var _wid = _that.width() + pad;
	_that.find('.head_toggle').css({minWidth:(_wid+'px')});
})
