                                <TextBox x:Name="txtToolTotal" IsReadOnly="True" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtSparePartTotal" IsReadOnly="True" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtAssetTotal" IsReadOnly="True" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Margin="0,0,0,5"/>
