                                                    <TextBox IsReadOnly="True" x:Name="txtAssetItemName" Height="20" Margin="0,0,5,0" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="220"/>
                                                    <TextBlock Text="UOM: " Margin="0,0,5,0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}"/>
                                                    <TextBox IsReadOnly="True" x:Name="txtAssetUOM" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="120"/>
                                                    <TextBlock Text="RTP No.: " Margin="0,0,5,0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}"/>
                                                    <TextBox IsReadOnly="False" x:Name="txtAssetRTP" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="120"/>
                                                    <TextBlock Text="Serial No.: " Margin="0,0,5,0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}"/>
                                                    <TextBox IsReadOnly="False" x:Name="txtAssetSerialNo" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="120"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Unit Cost: " Margin="5,0,5,0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}"/>
                                                    <dxe:PopupCalcEdit  IsReadOnly="False" Text="0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="120" x:Name="txtAssetUnitCost"/>
                                                    <TextBlock Text="Qty: " Margin="5,0,5,0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}"/>
                                                    <dxe:PopupCalcEdit Mask="D" x:Name="txtAssetQty" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="120"/>
                                                    <Button x:Name="btnAssetAdd" Click="BtnAssetAdd_Click" Width="90" Height="20" Margin="10,0,0,0" Style="{DynamicResource ButtonFlatStyle}" Background="{DynamicResource IOSDeepBlue}" Content="ADD" Foreground="White"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DockPanel>
                                    <DockPanel Grid.Row="1" Grid.ColumnSpan="2">
                                        <dxg:GridControl Height="400" x:Name="dgAssetStockIn" >
                                            <dxg:GridControl.View>
                                                <dxg:TableView  x:Name="dgAssetTableView" CellValueChanged="DgAssetTableView_CellValueChanged"  ShowDataNavigator="True" DataNavigatorButtons="Navigation" Header="Assets and Equipments Stock In" AllowEditing="False" AllowGrouping="False" />
                                            </dxg:GridControl.View>
                                            <dxg:GridColumn FieldName="Actions">
                                                <dxg:GridColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel HorizontalAlignment="Center" Margin="10">
                                                            <Button x:Name="btnAssetDelete" Click="BtnAssetDelete_Click" Width="25" Height="25" Background="{DynamicResource IOSRed}" Style="{DynamicResource ButtonFlatStyle}" ToolTip="Add Item" >
                                                                <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" Width="20" Height="20" Fill="White">
                                                                    <Rectangle.OpacityMask>
                                                                        <ImageBrush ImageSource="/EngineeringToolsEquipmentsInventory;component/Libs/Images/close.png"/>
                                                                    </Rectangle.OpacityMask>
                                                                </Rectangle>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </dxg:GridColumn.CellTemplate>
                                            </dxg:GridColumn>
                                            <dxg:GridColumn FieldName="ItemCode" AllowEditing="False"/>
                                            <dxg:GridColumn FieldName="ItemName" AllowEditing="False"/>
                                            <dxg:GridColumn FieldName="UOM" AllowEditing="False"/>
                                            <dxg:GridColumn FieldName="Quantity" AllowEditing="True">
                                                <dxg:GridColumn.EditSettings>
                                                    <dxe:CalcEditSettings/>
                                                </dxg:GridColumn.EditSettings>
                                            </dxg:GridColumn>
                                            <dxg:GridColumn AllowEditing="True" FieldName="UnitCost">
                                                <dxg:GridColumn.EditSettings>
                                                    <dxe:CalcEditSettings/>
                                                </dxg:GridColumn.EditSettings>
                                            </dxg:GridColumn>
                                            <dxg:GridColumn AllowEditing="False" FieldName="TotalCost"/>
                                            <dxg:GridColumn FieldName="RtpNo"/>
                                            <dxg:GridColumn FieldName="SerialNo"/>
                                            <dxg:GridColumn FieldName="Date" AllowEditing="False"/>
                                        </dxg:GridControl>
                                    </DockPanel>
                                </Grid>
                            </ScrollViewer>
                        </dx:DXTabItem>
                    </dx:DXTabControl>
                </StackPanel>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
