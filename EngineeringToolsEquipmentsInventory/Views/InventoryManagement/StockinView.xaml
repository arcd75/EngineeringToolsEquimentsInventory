                                                    <Button x:Name="btnAddTool" Click="BtnAddTool_Click" Width="90" Height="20" Margin="10,0,0,0" Style="{DynamicResource ButtonFlatStyle}" Background="{DynamicResource IOSDeepBlue}" Content="ADD" Foreground="White"/>
