                                                            <Rectangle.OpacityMask>
                                                                <ImageBrush ImageSource="/EngineeringToolsEquipmentsInventory;component/Libs/Images/Command-Reset.png" />
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
