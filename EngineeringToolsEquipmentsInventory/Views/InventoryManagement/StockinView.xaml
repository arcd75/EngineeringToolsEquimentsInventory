                                                        <Rectangle.OpacityMask>
                                                            <ImageBrush ImageSource="/EngineeringToolsEquipmentsInventory;component/Libs/Images/add.png" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                </Button>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Margin="0,5,0,0" Orientation="Horizontal">
                                                <TextBlock Text="Item Name: " Margin="0,0,5,0" Height="20" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}"/>
                                                <TextBox IsReadOnly="True" x:Name="txtConsumableItemName" Height="20" Margin="0,0,5,0" FontFamily="{DynamicResource FontHelveticaNeu_BlackCond}" Width="220"/>
